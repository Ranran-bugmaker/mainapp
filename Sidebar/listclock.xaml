<UserControl x:Class="mainapp.Sidebar.listclock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mainapp.Sidebar"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD69292" Opacity="1" Height="330" Width="642">
        <hc:ListClock Margin="61,50,362,75" x:Name="TIMES" DisplayTime="0:10:00" SelectedTime="00:10:00" MouseLeave="TIMES_MouseLeave" VerticalAlignment="Center" HorizontalAlignment="Center" Height="205" Width="219" />
        <Button Content="开始计划关机任务" HorizontalAlignment="Left" Margin="398,52,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click" Height="47"/>
        <Button Content="取消计划关机" HorizontalAlignment="Left" Margin="398,134,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click_1" Height="47"/>
        <Button Content="重启" HorizontalAlignment="Left" Margin="398,208,0,0" VerticalAlignment="Top" Width="175"  Height="47" Click="Button_Click_2"/>
    </Grid>
</UserControl>
